@using Pierre_Bakery.Models;


<h3>Here are all the orders for this vendor:</h3>
@if(Model.Count == 0)
{
  <p>There are currently no vendors</p>
}
<ul>
@foreach (Vendor vendor in Model)
{
  <li><a href='/vendor/@vendor.Id'>@vendor.Description</a></li>
}
</ul>

<p><a href='/vendor/@Model["vendor"].Id/order/new'>Add a new item</a></p>
<p><a href='/vendor'>Return to category list</a></p>
<p><a href='/'>Return to Main Page</a></p>